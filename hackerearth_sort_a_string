#include<bits/stdc++.h>
#include<vector>
using namespace std;

int count(string s,int w)
{int count1=0,count2=0;
    for(int i=0;i<s.length();i++)
    {
        if(s[i]=='a')
        count1++;
        if(s[i]=='c')
        count2++;
    }
    if(count1>count2)
    w=w+1;
return w;    
}
int solve (int n, string s) {
   vector<string> st;
   vector<string>::iterator t;
   for (int i = 0; i < n; i++)  
        for (int len = 1; len <= n - i; len++) 
             st.push_back(s.substr(i, len));
   int w=0,counter=0;
    for(t=st.begin();t<st.end();t++)
    {
    counter=count(*t,w)+counter;
    }

    return counter;          

   // Write your code here
   
}

int main() {

    ios::sync_with_stdio(0);
    cin.tie(0);
    int n;
    cin >> n;
    string s;
    getline(cin, s);

    int out_;
    out_ = solve(n, s);
    cout << out_;
}
